<h1>Listing submissions</h1>

<table>
  <tr>
    <th>Answer</th>
    <th>User</th>
    <th>Question</th>
    <th></th>
  </tr>

<% @submissions.each do |submission| %>
  <tr>
    <td><%= submission.answer %></td>
    <td><%= submission.user_id %></td>
    <td><%= submission.question_id %></td>
    <td><%= link_to 'Destroy', submission, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

